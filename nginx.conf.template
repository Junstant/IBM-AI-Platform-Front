server {
    listen ${NGINX_PORT_INTERNAL};
    server_name _;
    root /usr/share/nginx/html;
    index index.html;

    # ✅ Configuración para uploads grandes (RAG)
    client_max_body_size 100M;
    client_body_timeout 300s;
    client_body_buffer_size 128k;

    proxy_connect_timeout   300s;
    proxy_send_timeout      300s;
    proxy_read_timeout      300s;

    # --- PROXY PARA APIS ---
    location /api/fraude/ {
        proxy_pass http://${FRAUDE_API_HOST}:${FRAUDE_API_PORT}/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
    location /predict_single_transaction {
        proxy_pass http://${FRAUDE_API_HOST}:${FRAUDE_API_PORT}/predict_single_transaction;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
    location /api/textosql/ {
        proxy_pass http://${TEXTOSQL_API_HOST}:${TEXTOSQL_API_PORT}/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    # --- PROXY PARA RAG API ---
    location /api/rag/ {
        proxy_pass http://${RAG_API_HOST}:${RAG_API_PORT}/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Configuración especial para uploads grandes
        client_max_body_size 100M;
        proxy_request_buffering off;
        proxy_http_version 1.1;
        proxy_buffering off;
    }

    # --- PROXY PARA STATS API ---
    location /api/stats/ {
        proxy_pass http://${STATS_API_HOST}:${STATS_API_PORT}/api/stats/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    location /api/admin/ {
        proxy_pass http://${STATS_API_HOST}:${STATS_API_PORT}/api/admin/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    location /api/metrics/ {
        proxy_pass http://${STATS_API_HOST}:${STATS_API_PORT}/api/metrics/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # --- PROXY PARA MODELOS (SEPARADOS) ---
    location /proxy/${MISTRAL_PORT}/ {
        proxy_pass http://mistral-7b:8080/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
    location /proxy/${GEMMA_2B_PORT}/ {
        proxy_pass http://gemma-2b:8080/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
    location /proxy/${GEMMA_4B_PORT}/ {
        proxy_pass http://gemma-4b:8080/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
    location /proxy/${ARCTIC_TEXT2SQL_PORT}/ {
        proxy_pass http://arctic-text2sql:8080/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
    location /proxy/${DEEPSEEK_8B_PORT}/ {
        proxy_pass http://deepseek-8b:8080/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    # --- REGLA PARA LA APLICACIÓN SPA ---
    location / {
        try_files $uri /index.html;
    }
}