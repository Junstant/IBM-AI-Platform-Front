server {
    listen ${NGINX_PORT_INTERNAL};
    server_name _;
    root /usr/share/nginx/html;
    index index.html;

    # ✅ 1. RESOLVER DNS DE DOCKER
    # Esto es vital. Le dice a Nginx dónde preguntar por las IPs de los contenedores.
    resolver 127.0.0.11 valid=30s;

    # ✅ Configuración para uploads grandes (RAG)
    client_max_body_size 100M;
    client_body_timeout 300s;
    client_body_buffer_size 128k;

    proxy_connect_timeout   300s;
    proxy_send_timeout      300s;
    proxy_read_timeout      300s;

    # --- PROXY PARA APIS (ESTÁNDAR) ---
    location /api/fraude/ {
        proxy_pass http://${FRAUDE_API_HOST}:${FRAUDE_API_PORT}/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
    location /predict_single_transaction {
        proxy_pass http://${FRAUDE_API_HOST}:${FRAUDE_API_PORT}/predict_single_transaction;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
    location /api/textosql/ {
        proxy_pass http://${TEXTOSQL_API_HOST}:${TEXTOSQL_API_PORT}/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    # --- PROXY PARA RAG API ---
    location /api/rag/ {
        proxy_pass http://${RAG_API_HOST}:${RAG_API_PORT}/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        client_max_body_size 100M;
        proxy_request_buffering off;
        proxy_http_version 1.1;
        proxy_buffering off;
    }

    # --- PROXY PARA STATS API ---
    location /api/stats/ {
        proxy_pass http://${STATS_API_HOST}:${STATS_API_PORT}/api/stats/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    location /api/admin/ {
        proxy_pass http://${STATS_API_HOST}:${STATS_API_PORT}/api/admin/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    location /api/metrics/ {
        proxy_pass http://${STATS_API_HOST}:${STATS_API_PORT}/api/metrics/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # --- PROXY PARA MODELOS (FIX ROBUSTO APLICADO) ---
    # Usamos variables ($upstream_...) para forzar la resolución DNS al recibir la petición
    # y reescritura (rewrite) manual porque proxy_pass con variables no recorta la URL automáticamente.

    location /proxy/${MISTRAL_PORT}/ {
        set $upstream_mistral mistral-7b;
        rewrite ^/proxy/${MISTRAL_PORT}/(.*) /$1 break;
        proxy_pass http://$upstream_mistral:8080;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    location /proxy/${GEMMA_2B_PORT}/ {
        set $upstream_gemma2b gemma-2b;
        rewrite ^/proxy/${GEMMA_2B_PORT}/(.*) /$1 break;
        proxy_pass http://$upstream_gemma2b:8080;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    location /proxy/${GEMMA_4B_PORT}/ {
        set $upstream_gemma4b gemma-4b;
        rewrite ^/proxy/${GEMMA_4B_PORT}/(.*) /$1 break;
        proxy_pass http://$upstream_gemma4b:8080;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    location /proxy/${ARCTIC_TEXT2SQL_PORT}/ {
        set $upstream_arctic arctic-text2sql;
        rewrite ^/proxy/${ARCTIC_TEXT2SQL_PORT}/(.*) /$1 break;
        proxy_pass http://$upstream_arctic:8080;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    location /proxy/${DEEPSEEK_8B_PORT}/ {
        set $upstream_deepseek deepseek-8b;
        rewrite ^/proxy/${DEEPSEEK_8B_PORT}/(.*) /$1 break;
        proxy_pass http://$upstream_deepseek:8080;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    # --- REGLA PARA LA APLICACIÓN SPA ---
    location / {
        try_files $uri /index.html;
    }
}